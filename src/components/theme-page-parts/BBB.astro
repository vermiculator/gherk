---
import { Card, LinkCard, CardGrid } from '@astrojs/starlight/components';
import { getCollection } from 'astro:content';
const blush = await getCollection('vignettes', ({ data }) => {
  if(data.appearOn) {
    return data.appearOn.includes('blush');
  }
    return false;
});
const bloom = await getCollection('vignettes', ({ data }) => {
  if(data.appearOn) {
    return data.appearOn.includes('bloom');
  }
    return false;
});
const blur = await getCollection('vignettes', ({ data }) => {
  if(data.appearOn) {
    return data.appearOn.includes('blur');
  }
    return false;
});
---

<CardGrid>
    <Card title="bloom">
        <CardGrid>
            {  bloom.map((item:any) =>
            <Card title={item.data.title}></Card> )
            }
        </CardGrid>
    </Card>
    <Card title="blush">
        <CardGrid>
            {  blush.map((item:any) =>
            <Card title={item.data.title}></Card> )
            }
        </CardGrid>
    </Card>
    <Card title="blur">
        <CardGrid>
            {  blur.map((item:any) =>
            <Card title={item.data.title}></Card> )
            }
        </CardGrid>
    </Card>
</CardGrid>