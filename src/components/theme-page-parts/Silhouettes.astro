---
import { Card, LinkCard, CardGrid } from '@astrojs/starlight/components';
import { getCollection } from 'astro:content';
const silhouettes = await getCollection('vignettes', ({ data }) => {
  if(data.appearOn) {
    return data.appearOn.includes('silhouettes');
  }
    return false;
});
---


    <Card title="silhouettes">

       <CardGrid>
            {  silhouettes.map((item:any) =>
            <Card title={item.data.title}></Card> )
            }
        </CardGrid>

    </Card>