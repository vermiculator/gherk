---
import Layout from '../components/Layout.astro';
import { Card, CardGrid } from '@astrojs/starlight/components';
import { getCollection } from 'astro:content';
const allItems = await getCollection('mulch');
import { Image } from 'astro:assets';

---
<Layout pageTitle='mulch' pageStyle='leftside' starlightSettings={{prev: false, next: false}}>
 <CardGrid>
    {  allItems.map((item:any) =>
      <Card title=''>
        <Image src={item.data.url} alt={item.data && item.data.alt ? item.data.alt : 'glitch collage'} width="300" height="100" />
      </Card>
      )
    }
  </CardGrid>
</Layout>