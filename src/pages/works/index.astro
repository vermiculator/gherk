---
export const prerender = false
import Layout from '../../components/Layout.astro';
import { Card, CardGrid } from '@astrojs/starlight/components';
import { getCollection } from 'astro:content';
const allItems = await getCollection('works');

---

<Layout pageTitle='works' pageStyle='leftside' starlightSettings={{}}>
 <CardGrid>
    {allItems.map((item) =>
      item && item.data && item.data.image ? (
        <Card title="">
          <img src={item.data.image.src} alt={item.data.image.alt}/>
        </Card>
      ) : null
    )}
  </CardGrid>
</Layout>